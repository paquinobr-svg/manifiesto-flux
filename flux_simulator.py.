Python

import time
import uuid
import random

def iniciar_simulador_comunitario():
    mi_id = uuid.uuid4()
    poblacion_local = 825  # Simulamos a tus observadores actuales
    unidades_totales_red = 0.0
    mis_unidades = 0.0
    
    print(f"--- ALDEA DIGITAL FLUX ACTIVADA ---")
    print(f"Tu Nodo Soberano: {mi_id}")
    print(f"Habitantes en tu red: {poblacion_local}")
    print("-------------------------------------")

    try:
        while True:
            # Mi flujo personal
            flujo_personal = 0.0001
            mis_unidades += flujo_personal
            
            # El flujo de la comunidad (simulado)
            flujo_comunidad = flujo_personal * poblacion_local
            unidades_totales_red += flujo_comunidad
            
            # Mostrar la utilidad real
            print(f"| TÃš: {mis_unidades:.4f} | RED LOCAL: {unidades_totales_red:.2f} unidades |", end="\r")
            
            # Simular un evento de "Intercambio Soberano" aleatorio
            if random.random() < 0.05:
                print(f"\n[AVISO] Nodo vecino ha validado un intercambio. La red es estable.")
            
            time.sleep(0.5)
            
    except KeyboardInterrupt:
        print("\nSimulaciÃ³n finalizada. La red persiste en el silicio.")

if __name__ == "__main__":
    iniciar_simulador_comunitario()
